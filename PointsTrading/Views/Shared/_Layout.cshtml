<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Points - Trading</title>

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon" />
    <script>
        function getBaseURL() {
            return location.protocol + "//" + location.hostname + (location.port && ":" + location.port) + "/";
        }

        $(document).ready(function () {
            $('#form-subscribe').submit(function (event) {
                event.preventDefault();
                var mail = $('#mailContent').val();
                var data = { 'MailId': mail };
                $.ajax({
                    method: 'POST',
                    async: true,
                    data: data,
                    url: getBaseURL() + 'api/mail/insertmailid',
                    success: function (result) {
                        if (result == 'success') {
                            alert('Thanks for Subscribing!!!');
                            $('#mailContent').val('');
                        } else {
                            alert('Sorry! Please try again.');
                        }
                    }
                });
            });
        });
    </script>

</head>
@{
    PointsTradingBusinessLayer.ProdutsManager menus = new PointsTradingBusinessLayer.ProdutsManager();
    var catagories = menus.GetProductCategories();
}
<body>

    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en', includedLanguages: 'en,ar,hi,ml,ta,tl,zh-CN', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
        }
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-10"></div>
                <div class="col-sm-2">
                    <div style="text-align:center" id="google_translate_element"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="logo" style="text-align:center">
                        <a href="@Url.Action("index","home")"><img src="~/img/points-logo.png" alt="logo" style="width:165px;height:90px;margin-top: 15px;"></a>
                    </div>
                </div>

                <div class="col-sm-10">
                    <div class="shopping-item">
                        <a href="@Url.Action("index","home")">Points - <span class="cart-amunt">Trading</span><i class="fa fa-shopping-cart"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="ViewBag.isHomeActive"><a href="@Url.Action("index","home")">Home</a></li>
                        @foreach (var item in catagories)
                        {
                            <li><a href="@Url.Action("category","product",new { id=item.CategoryID.ToString() })">@item.CategoryName</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    @RenderBody()

    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2>Points <span>Trading</span></h2>
                        <p>We believe in empowerment tranparency and doing right by all. We trade premium quality Electrical and Electronic products with warranty, partnering with companies and suppliers in Qatar.</p>
                        <div class="footer-social">
                            <a href="https://www.facebook.com/pointsqatar" target="_blank"><i class="fa fa-facebook"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">We </h2>
                        <ul>
                            <li><a>My account</a></li>
                            <li><a>Order history</a></li>
                            <li><a>Wishlist</a></li>
                            <li><a>Vendor contact</a></li>
                            <li><a>Front page</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Categories</h2>
                        <ul>
                            @for (int i = 0; i < 5; i++)
                            {
                                <li><a href="@Url.Action("category","product",new { id=catagories[i].CategoryID.ToString() })">@catagories[i].CategoryName</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-newsletter">
                        <h2 class="footer-wid-title">Newsletter</h2>
                        <p>Sign up to our newsletter and get exclusive deals you wont find anywhere else straight to your inbox!</p>
                        <div class="newsletter-form">
                            <form id="form-subscribe">
                                <input type="email" id="mailContent" placeholder="Type your email" required>
                                <input type="submit" id="SubmitMail" value="Subscribe">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer top area -->

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2016 Points - Trading. All Rights Reserved. Maintained by <a href="http://www.pointsqatar.com" target="_blank">Points</a></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="copyright">
                        <p>Total no. of Views: <a>@System.Web.HttpContext.Current.Application["NoOfUsers"].ToString()</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/js/main.js"></script>

</body>
</html>